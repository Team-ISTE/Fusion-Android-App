<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_notification" tools:context="com.bvmiste.vision16.Notification">


    <!-- Feedback Form -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:weightSum="1">
        <!-- Full Name Label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill the form to get notification in timely manner about all the events and news of fusion
1)For each Reciept-No you must fill the form.

2)If you forgot to give email id use this in email field istedoc@gmail.com and notify webteam about ur email id.

3)If you have receipt-no and system gives error like Register.... drop a mail at webteam.fusion@gmail.com or contact @9687181987"
            android:layout_gravity="center_horizontal" />
        <!-- College -->
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp">
            <EditText android:id="@+id/email1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="Email"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="6dp">
         <EditText android:id="@+id/no1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reciept-No"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnRegister"
            android:layout_width="236dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="12dp"
            android:background="@color/colorPrimary"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Submit"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>
